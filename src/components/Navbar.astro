---
import "../styles/global.css";
---
<div class="bg-[#161717] h-screen w-[5.2%] border-white flex flex-col items-center">
    <div class="p-[20%] w-full">
        <img src="/anga.svg" alt="Anga Logo" class="w-full h-auto" />
    </div>

    <div class="flex w-full mt-[10%]">
        <div class="w-1/6" />
        <div class="flex w-5/6 bg-black hover:bg-[#161717] rounded-l-2xl">
            <div class="w-3/4">
                <img src="/home.svg" alt="Home" class="w-full h-auto filter invert p-[1.8vh]" />
            </div>
            <div class="w-1/4" />
        </div>
    </div>
    <div class="flex w-full mt-[5%]">
        <div class="w-1/6" />
        <div class="flex w-5/6 bg-[#161717] hover:bg-black rounded-l-2xl">
            <div class="w-3/4">
                <img src="/file.svg" alt="Files" class="w-full h-auto p-[1.8vh] filter invert" />
            </div>
            <div class="w-1/4" />
        </div>
    </div>
    <div class="flex w-full mt-[5%]">
        <div class="w-1/6" />
        <div class="flex w-5/6 bg-[#161717] hover:bg-black rounded-l-2xl">
            <div class="w-3/4">
                <img src="/collection.svg" alt="Collections" class="w-full h-auto filter invert p-[1.8vh]" />
            </div>
            <div class="w-1/4" />
        </div>
    </div>
    <div class="flex w-full mt-[5%]">
        <div class="w-1/6" />
        <div class="flex w-5/6 bg-[#161717] hover:bg-black rounded-l-2xl">
            <div class="w-3/4">
                <img src="/github.svg" alt="github" class="w-full h-auto filter invert p-[1.8vh]" />
            </div>
            <div class="w-1/4" />
        </div>
    </div>
    <div class="flex-grow" />
    <div class="w-full p-[32%]">
        <img src="user.svg" alt="User" class="w-full h-auto" />
    </div>
</div>