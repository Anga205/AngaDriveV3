---
import "../styles/global.css";
import Navbar from "./Navbar.astro";
import quotes from "../../public/quotes.json";
import DefaultsButtons from "./DefaultsButtons.astro";

interface Quote {
  text: string;
  author: string;
}

const typedQuotes: Quote[] = quotes as Quote[];
const randomQuote = typedQuotes[Math.floor(Math.random() * typedQuotes.length)];
---
<div class="max-h-screen w-screen flex items-start bg-black overflow-hidden">
    <Navbar />
    <div class="flex flex-col w-full h-screen pl-[2vh] pr-[1vh] py-[1vh] space-y-[1.5vh]">
        <div class="w-full flex items-center">
            <div>
                <p class="text-white font-extrabold font-sans text-[4vh]">
                    Drive V3
                </p>
                <p class="text-white font-normal text-[1.8vh]">
                    &OpenCurlyDoubleQuote;<em>{randomQuote.text}</em>&CloseCurlyDoubleQuote; â€” {randomQuote.author}
                </p>
            </div>
            <div class="flex-grow"/>
            <a class="text-blue-500 font-semibold hover:underline cursor-pointer text-[1.65vh]" href="https://github.com/shakirth-anisha">
                Designed by Anisha
            </a>
        </div>
        <div class="flex w-full h-full space-x-[1.5vh]">
            <div class="flex flex-col w-1/2 h-full space-y-[1.5vh]">
                <DefaultsButtons />
                <div class="flex-grow space-y-[1.5vh] pb-[1.5vh]">
                    <div class="w-full h-5/12 bg-[#242424] flex rounded-[1.5vh] p-[1.65vh]">
                        <p class="text-white font-semibold text-[2vh]">Site Activity Over Past Week</p>
                    </div>
                    <div class="w-full h-7/12 flex space-x-[1.5vh]">
                        <div class="w-1/2 bg-[#242424] rounded-[1.5vh] p-[1.65vh]">
                            <p class="text-white font-semibold text-[2vh]">Ram Usage</p>
                        </div>
                        <div class="w-1/2 bg-[#242424] rounded-[1.5vh] p-[1.65vh]">
                            <p class="text-white font-semibold text-[2vh]">CPU Usage</p>
                        </div>
                    </div> 
                </div>
            </div>
            <div class="w-1/2 h-full relative">
                <div class="w-full h-full">
                    <img class="pl-[1vh] pr-[20vh] translate-y-[-4vh]" src="/butterfly.png"/>
                </div>
                <div class="absolute top-0 left-0 w-full h-full flex flex-col space-y-[1.5vh]">
                    <div class="space-x-[1.5vh] items-end flex w-full h-[70%]">
                        <div class="bg-[#242424] h-[20vh] w-[28%] flex flex-col items-center justify-center p-[1vh] rounded-[1.5vh]">
                            <p class="text-white font-semibold text-[1.8vh]">Users</p>
                            <p class="text-white font-semibold text-[10vh]">33</p>
                        </div>
                        <div class="bg-[#242424] h-[20vh] w-[28%] flex flex-col justify-center items-center p-[1vh] rounded-[1.5vh]">
                            <p class="text-white font-semibold text-[1.8vh]">Files Hosted</p>
                            <p class="text-white font-semibold text-[8vh]">1619</p>
                        </div>
                        <div class="bg-[#242424] h-[38vh] w-[44%] rounded-[1.5vh] flex flex-col justify-center items-center p-[2vh] space-y-[2vh]">
                            <p class="text-white font-semibold text-[2vh]">Send me an Email</p>
                            <input placeholder="Your Email" class="w-full bg-[#323232] placeholder-[#959595] p-[0.8vh] rounded-[0.3vh]" />
                            <textarea placeholder="Your Message" class="w-full bg-[#323232] placeholder-[#959595] p-[0.8vh] rounded-[0.3vh] h-full" />
                            <button class="bg-blue-500 text-white font-semibold p-[0.8vh] rounded-[0.3vh] w-full">Send</button>
                        </div>
                    </div>
                    <div class="space-x-[1.5vh] justify-center flex w-full h-[30%] rounded-[1.5vh] bg-[#242424] p-[2vh]">
                        <p class="text-white font-semibold text-[2vh]">Space Used</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 