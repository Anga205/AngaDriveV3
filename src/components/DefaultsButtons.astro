---
import "../styles/global.css";
---

<div class="w-full bg-black flex space-x-[1.5vh]">
    <div class="w-1/3 bg-[#242424] h-[15vh] rounded-[1.5vh] overflow-hidden">
        <div class="w-full h-[0.5vh] bg-blue-500"/>
        <div class="flex p-[1.3vh] px-[2vh] w-full h-full">
            <div class="h-full flex flex-col">
                <p class="text-white font-semibold text-[2vh]">Caching</p>
                <div class="flex-grow"/>
                <p class="text-gray-400 text-[1.6vh] mb-[1vh]">Default: Disabled</p>
            </div>
            <div class="flex-grow"/>
            <div class="h-full aspect-square py-[2vh] pl-[5vh]">
                <img src="/database-zap.svg" alt="Lock" style="box-shadow: inset -4px 4px 6px rgba(0, 0, 0, 0.3);" class="rounded-[1.3vh] bg-[#404040] w-full h-full p-[1.4vh]"/>
            </div>
        </div>
    </div>
    <div class="w-1/3 bg-[#242424] h-[15vh] rounded-[1.5vh] overflow-hidden">
        <div class="w-full h-[0.5vh] bg-purple-700 "/>
        <div class="flex p-[1.3vh] px-[2vh] w-full h-full">
            <div class="h-full flex flex-col">
                <p class="text-white font-semibold text-[2vh]">File Previews</p>
                <div class="flex-grow"/>
                <p class="text-gray-400 text-[1.6vh] mb-[1vh]">Default: Enabled</p>
            </div>
            <div class="flex-grow"/>
            <div class="h-full aspect-square py-[2vh] pl-[5vh]">
                <img src="/scan-eye.svg" alt="Lock" style="box-shadow: inset -4px 4px 6px rgba(0, 0, 0, 0.3);" class="rounded-[1.3vh] bg-[#404040] w-full h-full p-[1.4vh]"/>
            </div>
        </div>
    </div>
    <div class="w-1/3 bg-[#242424] h-[15vh] rounded-[1.5vh] overflow-hidden">
        <div class="w-full h-[0.5vh] bg-green-600"/>
        <div class="flex p-[1.3vh] px-[2vh] w-full h-full">
            <div class="h-full flex flex-col">
                <p class="text-white font-semibold text-[2vh]">Ultra Secure</p>
                <div class="flex-grow"/>
                <p class="text-gray-400 text-[1.6vh] mb-[1vh]">Default: Disabled</p>
            </div>
            <div class="flex-grow"/>
            <div class="h-full aspect-square py-[2vh] pl-[5vh]">
                <img src="/lock.svg" alt="Lock" style="box-shadow: inset -4px 4px 6px rgba(0, 0, 0, 0.3);" class="rounded-[1.3vh] bg-[#404040] w-full h-full p-[1.5vh]"/>
            </div>
        </div>
    </div>
</div>